@model jmannionBlog.Models.BlogPost


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h2>My Insipration</h2>
        <hr />
